{
  "name": "citty-test-utils",
  "version": "0.4.0",
  "description": "A comprehensive testing framework for CLI applications built with Citty, featuring Docker cleanroom support, fluent assertions, advanced scenario DSL, and noun-verb CLI structure with template generation.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "ctu": "./src/cli.mjs",
    "citty-test-utils": "./src/cli.mjs"
  },
  "types": "src/types/types.d.ts",
  "keywords": [
    "testing",
    "cli",
    "citty",
    "docker",
    "testcontainers",
    "cleanroom",
    "assertions",
    "snapshot",
    "snapshot-testing",
    "noun-verb",
    "scenario-dsl",
    "template-generation",
    "file-generation",
    "citty-testing",
    "docker-cleanroom",
    "fluent-assertions",
    "test-scenarios",
    "cli-testing",
    "nodejs"
  ],
  "author": "GitVan Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seanchatmangpt/citty-test-utils.git"
  },
  "bugs": {
    "url": "https://github.com/seanchatmangpt/citty-test-utils/issues"
  },
  "homepage": "https://github.com/seanchatmangpt/citty-test-utils#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "nunjucks": "^3.2.4",
    "proper-lockfile": "^4.1.2",
    "testcontainers": "^10.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "citty": "^0.1.6",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:fast": "vitest run --reporter=basic --no-coverage",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:citty-integration": "vitest run test/integration/citty-integration.test.mjs",
    "test:bdd": "vitest run test/bdd",
    "test:readme": "vitest run test/readme",
    "test:readme:cleanroom": "vitest run test/readme/cleanroom.test.mjs",
    "test:readme:cleanroom:complete": "vitest run test/readme/cleanroom-complete.test.mjs",
    "test:readme:cleanroom:gen": "vitest run test/readme/cleanroom-gen-focus.test.mjs",
    "test:readme:cleanroom:concurrency": "vitest run test/readme/cleanroom-concurrency-validation.test.mjs",
    "test:readme:main-cli:concurrency": "vitest run test/readme/main-cli-concurrency-validation.test.mjs",
    "test:readme:realistic:concurrency": "vitest run test/readme/realistic-main-cli-concurrency.test.mjs",
    "test:readme:error-handling": "vitest run test/readme/cleanroom-with-error-handling.test.mjs",
    "test:readme:let-it-crash": "vitest run test/readme/cleanroom-let-it-crash.test.mjs",
    "test:readme:comprehensive-crash": "vitest run test/readme/comprehensive-crash-tests.test.mjs",
    "test:readme:essential-crash": "vitest run test/readme/essential-crash-tests.test.mjs",
    "test:readme:focused-crash": "vitest run test/readme/focused-crash-tests.test.mjs",
    "test:readme:e2e": "vitest run test/readme/end-to-end.test.mjs",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:enterprise": "vitest run test/enterprise",
    "test:compliance": "vitest run test/compliance",
    "test:performance": "vitest run test/performance",
    "test:enterprise-runner": "vitest run test/enterprise/enterprise-test-runner.test.mjs",
    "demo": "node demo.mjs",
    "demo:enterprise": "node demo-enterprise.js"
  },
  "files": [
    "index.js",
    "src/",
    "playground/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/"
  ]
}

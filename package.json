    "scenario-dsl",
    "template-generation",
    "file-generation",
    "universal-cli-testing",
    "contract-adapter",
    "cross-language",
    "framework-agnostic",
    "pty-testing",
    "matrix-testing",
    "docker-cleanroom",
    "network-policies",

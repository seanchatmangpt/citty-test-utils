{
  "name": "citty-test-utils",
  "version": "0.3.1",
  "description": "Comprehensive testing framework for CLI applications with Docker cleanroom support, fluent assertions, scenario DSL, and noun-verb CLI structure",
  "type": "module",
  "main": "index.js",
  "bin": {
    "ctu": "./src/cli.mjs",
    "citty-test-utils": "./src/cli.mjs"
  },
  "types": "src/types/types.d.ts",
  "keywords": [
    "testing",
    "cli",
    "docker",
    "testcontainers",
    "gitvan",
    "citty",
    "cleanroom",
    "assertions",
    "snapshot",
    "snapshot-testing",
    "noun-verb",
    "scenario-dsl",
    "template-generation",
    "file-generation"
  ],
  "author": "GitVan Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seanchatmangpt/gitvan.git",
    "directory": "vendors/citty-test-utils"
  },
  "bugs": {
    "url": "https://github.com/seanchatmangpt/gitvan/issues"
  },
  "homepage": "https://github.com/seanchatmangpt/gitvan#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "nunjucks": "^3.2.4",
    "proper-lockfile": "^4.1.2",
    "testcontainers": "^10.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "citty": "^0.1.6",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:fast": "vitest run --reporter=basic --no-coverage",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:citty-integration": "vitest run test/integration/citty-integration.test.mjs",
    "test:bdd": "vitest run test/bdd",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:enterprise": "vitest run test/enterprise",
    "test:compliance": "vitest run test/compliance",
    "test:performance": "vitest run test/performance",
    "test:enterprise-runner": "vitest run test/enterprise/enterprise-test-runner.test.mjs",
    "demo": "node demo.mjs",
    "demo:enterprise": "node demo-enterprise.js"
  },
  "files": [
    "index.js",
    "src/",
    "playground/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/"
  ]
}
